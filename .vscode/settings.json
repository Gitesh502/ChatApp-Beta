{
  "git.ignoreLimitWarning": true,
  "terminal.integrated.shell.linux": "bash",
  "terminal.integrated.shell.osx": "bash",
  "beautify.language": {
    "js": {
      "type": ["javascript", "json"],
      "filename": [".jshintrc", ".jsbeautify"],
      "ext": ["js", "json"]
    },
    "css": ["css", "scss"],
    "html": ["htm", "html"]
  },
"editor.formatOnSave": false,
"eslint.validate": [
    "javascript",
    "javascriptreact", { "language": "html", "autoFix": true }

]
}
